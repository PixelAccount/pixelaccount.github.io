<script>
  // Play YouTube audio with sound on button click
  const musicButton = document.getElementById("musicBtn");
  const iframe = document.getElementById("ytAudio");

  musicButton.addEventListener("click", () => {
    iframe.src =
      "https://www.youtube.com/embed/0yiwxIuXmdk?autoplay=1&loop=1&playlist=0yiwxIuXmdk";
    musicButton.textContent = "Music playing";
    musicButton.disabled = true;
  });

  function goToAeroWorld() {
    window.location.href =
      "https://pixelaccount.github.io/FrutigerAeroWorld";
  }
</script>

